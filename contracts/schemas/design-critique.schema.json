{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Design Critique",
  "description": "Output of design-ux-critic agent - 6-pass UX analysis results",
  "type": "object",
  "required": ["iteration", "timestamp", "passes", "priority_issues", "ready_for"],
  "properties": {
    "iteration": {
      "type": "number",
      "description": "Iteration number"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 datetime"
    },
    "passes": {
      "type": "object",
      "description": "Results from each UX pass",
      "required": ["mental_model", "information_architecture", "affordances", "cognitive_load", "state_design", "flow_integrity"],
      "properties": {
        "mental_model": {
          "$ref": "#/definitions/pass_result"
        },
        "information_architecture": {
          "$ref": "#/definitions/pass_result"
        },
        "affordances": {
          "$ref": "#/definitions/pass_result"
        },
        "cognitive_load": {
          "$ref": "#/definitions/pass_result"
        },
        "state_design": {
          "$ref": "#/definitions/pass_result"
        },
        "flow_integrity": {
          "$ref": "#/definitions/pass_result"
        }
      },
      "additionalProperties": false
    },
    "dark_mode": {
      "type": "object",
      "description": "Dark mode visual testing results",
      "required": ["tested"],
      "properties": {
        "tested": {
          "type": "boolean"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["severity", "description", "component"],
            "properties": {
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "description": {
                "type": "string"
              },
              "component": {
                "type": "string",
                "description": "Affected element"
              }
            },
            "additionalProperties": false
          }
        },
        "what_works": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "principle_violations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["principle", "severity", "description", "location"],
        "properties": {
          "principle": {
            "type": "string",
            "description": "Which design principle was violated"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "string",
            "description": "Where in the design"
          },
          "mode": {
            "type": "string",
            "enum": ["light", "dark", "both"],
            "description": "Which mode(s) the violation occurs in"
          }
        },
        "additionalProperties": false
      }
    },
    "priority_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "category", "description", "suggestion"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "category": {
            "type": "string",
            "description": "Which pass identified this"
          },
          "description": {
            "type": "string"
          },
          "suggestion": {
            "type": "string"
          },
          "change_level": {
            "type": "string",
            "enum": ["strategic", "tactical"],
            "description": "Whether this requires strategic (Architect) or tactical (Visual Builder) changes"
          }
        },
        "additionalProperties": false
      }
    },
    "overall_assessment": {
      "type": "string",
      "description": "Summary assessment"
    },
    "ready_for": {
      "type": "string",
      "enum": ["iteration", "human_review", "handoff"],
      "description": "Next recommended step"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "pass_result": {
      "type": "object",
      "required": ["score", "findings", "what_works"],
      "properties": {
        "score": {
          "type": "number",
          "minimum": 1,
          "maximum": 10,
          "description": "Score from 1-10"
        },
        "findings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Issues found"
        },
        "what_works": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Positive aspects"
        }
      },
      "additionalProperties": false
    }
  }
}
