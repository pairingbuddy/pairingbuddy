{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["in_repo_docs"],
  "properties": {
    "in_repo_docs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paths to in-repo documentation files"
    },
    "external_docs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "description"],
        "properties": {
          "path": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "description": "External documentation locations"
    },
    "last_verified": {
      "type": "string",
      "description": "ISO 8601 timestamp of last human verification"
    }
  }
}
