{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Issues",
  "description": "Output of identify-*-issues agents",
  "type": "object",
  "required": ["issues"],
  "properties": {
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "issue_type", "description"],
        "properties": {
          "file": {
            "type": "string",
            "description": "File path where issue was found"
          },
          "line": {
            "type": "integer",
            "description": "Line number (optional)"
          },
          "issue_type": {
            "type": "string",
            "description": "Category of issue"
          },
          "description": {
            "type": "string",
            "description": "What the issue is"
          },
          "suggestion": {
            "type": "string",
            "description": "How to fix it (optional)"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
