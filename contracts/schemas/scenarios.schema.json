{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scenarios",
  "description": "Output of enumerate-scenarios-and-test-cases agent",
  "type": "object",
  "required": ["scenarios"],
  "properties": {
    "scenarios": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["scenario_id", "description", "test_cases"],
        "properties": {
          "scenario_id": {
            "type": "string",
            "description": "Unique identifier for the scenario"
          },
          "description": {
            "type": "string",
            "description": "What this scenario tests"
          },
          "test_cases": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["test_case_id", "description"],
              "properties": {
                "test_case_id": {
                  "type": "string",
                  "description": "Unique identifier for the test case"
                },
                "description": {
                  "type": "string",
                  "description": "Specific condition to verify"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
