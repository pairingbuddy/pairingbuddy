{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Current Batch",
  "description": "Input to implement-tests agent",
  "type": "object",
  "required": ["batch"],
  "properties": {
    "batch": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["test_id", "test_case_id", "scenario_id", "runner_id", "test_case_description", "test_file", "test_function"],
        "properties": {
          "test_id": {
            "type": "string",
            "description": "Unique identifier for this test"
          },
          "test_case_id": {
            "type": "string",
            "description": "Back-reference to test case"
          },
          "scenario_id": {
            "type": "string",
            "description": "Back-reference to scenario"
          },
          "runner_id": {
            "type": "string",
            "description": "Which runner to use"
          },
          "test_case_description": {
            "type": "string",
            "description": "From scenarios.json for context"
          },
          "test_file": {
            "type": "string",
            "description": "Path to test file"
          },
          "test_function": {
            "type": "string",
            "description": "Test function name"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
