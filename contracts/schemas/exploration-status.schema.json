{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exploration Status",
  "description": "Status tracking for parallel design explorations",
  "type": "object",
  "required": ["created", "agents"],
  "properties": {
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "When parallel explorations were initiated"
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Agent identifier"
          },
          "status": {
            "type": "string",
            "enum": ["running", "completed", "failed"],
            "description": "Current agent status"
          },
          "iterations": {
            "type": "integer",
            "description": "Number of iterations completed"
          },
          "port": {
            "type": "integer",
            "description": "HTTP port for preview server"
          },
          "reason": {
            "type": "string",
            "description": "Exploration reasoning or approach"
          }
        },
        "additionalProperties": false
      },
      "description": "List of exploration agents and their status"
    }
  },
  "additionalProperties": false
}
