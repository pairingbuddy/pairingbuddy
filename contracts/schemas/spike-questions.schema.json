{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spike Questions",
  "description": "Units to explore with per-unit execution configuration",
  "type": "object",
  "required": ["units"],
  "properties": {
    "units": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the unit"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name for the unit"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of what to explore"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "answered", "skipped"],
            "description": "Current status of the exploration unit"
          },
          "execution": {
            "type": "object",
            "properties": {
              "language": {
                "type": "string",
                "description": "Programming language for this unit"
              },
              "run_command": {
                "type": "string",
                "description": "Command to run the code"
              },
              "setup_command": {
                "type": "string",
                "description": "Optional command to set up dependencies"
              },
              "working_directory": {
                "type": "string",
                "description": "Subdirectory for this unit (e.g., 'spike/redis/')"
              },
              "environment": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Environment variables for this unit"
              }
            }
          }
        }
      }
    }
  }
}
